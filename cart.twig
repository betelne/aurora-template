                        </div>
                    </div>
            </fieldset>
        </form> #}

        <form class="cart-form cart-form--invoice" id="cart-form-address" style="display: none;">

            <fieldset class="cart-form__fieldset cart-form__fieldset--invoice-address">
                <label class="cart-form__title">Fakturační adresa</label>
                <div class="cart-form__items-wrapper">
                    <div class="cart-form__item">
                        <label class="cart-form__label" for="invoice-name">Jméno / společnost *</label>
                        <input class="cart-form__input" id="invoice-name" name="name" type="text" required>
                    </div>
                    <div class="cart-form__item">
                        <label class="cart-form__label" for="invoice-street">Ulice a č.p. *</label>
                        <input class="cart-form__input" id="invoice-street" name="street" type="text" required>
                    </div>
                    <div class="cart-form__item-group">
                        <div class="cart-form__item cart-form__item--city">
                            <label class="cart-form__label" for="invoice-city">Město *</label>
                            <input class="cart-form__input" id="invoice-city" name="city" type="text" required>
                        </div>
                        <div class="cart-form__item cart-form__item--zip">
                            <label class="cart-form__label" for="invoice-zip">PSČ *</label>
                            <input class="cart-form__input" id="invoice-zip" name="zip" type="text" required>
                        </div>
                    </div>
                    <div class="cart-form__item">
                        <label class="cart-form__label" for="invoice-country">Země *</label>
                        {# <input class="cart-form__input" id="invoice-country" name="country" type="text" required> #}
                        <select class="cart-form__select">
                            <option selected>Czech Republic</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <div class="cart-form__item-group">
                        <div class="cart-form__item">
                            <label class="cart-form__label" for="ic">IČ</label>
                            <input class="cart-form__input" id="ic" name="ic" type="text">
                        </div>
                        <div class="cart-form__item">
                            <label class="cart-form__label" for="dic">DIČ</label>
                            <input class="cart-form__input" id="dic" name="dic" type="text">
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset class="cart-form__fieldset cart-form__fieldset--delivery-address">
                <label class="cart-form__title">Dodací adresa</label>
                <div class="cart-form__info">
                    <i class="cart-form__info-icon las la-info-circle"></i>
                    <p class="cart-form__info-p">Vyplňte, jen pokud se liší od adresy fakturační.</p>
                </div>
                <div class="cart-form__items-wrapper">
                    <div class="cart-form__item">
                        <label class="cart-form__label" for="delivery-name">Jméno / společnost</label>
                        <input class="cart-form__input" id="delivery-name" name="name" type="text">
                    </div>
                    <div class="cart-form__item">
                        <label class="cart-form__label" for="delivery-address">Ulice a č.p.</label>
                        <input class="cart-form__input" id="delivery-address" name="street" type="text">
                    </div>
                    <div class="cart-form__item-group">
                        <div class="cart-form__item cart-form__item--city">
                            <label class="cart-form__label" for="delivery-city">Město</label>
                            <input class="cart-form__input" id="delivery-city" name="city" type="text">
                        </div>
                        <div class="cart-form__item cart-form__item--zip">
                            <label class="cart-form__label" for="delivery-zip">PSČ</label>
                            <input class="cart-form__input" id="delivery-zip" name="zip" type="text">
                        </div>
                    </div>
                    <div class="cart-form__item">
                        <label class="cart-form__label" for="delivery-country">Země</label>
                        {# <input class="cart-form__input" id="delivery-country" name="country" type="text"> #}
                        <select class="cart-form__select">
                            <option selected>Czech Republic</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                </div>
            </fieldset>

            <fieldset class="cart-form__fieldset cart-form__fieldset--contact">
                <label class="cart-form__title">Kontaktní údaje</label>
                <div class="cart-form__items-wrapper">
                    <div class="cart-form__item">
                        <label class="cart-form__label" for="email">E-mail *</label>
                        <input class="cart-form__input" id="email" name="email" type="email" required>
                    </div>
                    <div class="cart-form__item">
                        <label class="cart-form__label" for="phone">Telefon *</label>
                        <input class="cart-form__input" id="phone" name="phone" type="text" required>
                    </div>
                </div>
            </fieldset>

            <fieldset class="cart-form__fieldset cart-form__fieldset--note">
                <label class="cart-form__title">Poznámka</label>
                <div class="cart-form__items-wrapper">
                    <div class="cart-form__item">
                        <label class="cart-form__label" for="note">Poznámka k objednávce</label>
                        <textarea class="cart-form__input" id="note" rows="4"></textarea>
                    </div>
                </div>
            </fieldset>

            <button class="cart-button" id="cart-form-submit" type="submit">Pokračovat v objednávce</button>
        </form>

    </div>
{% endblock %}
