  <div class="add-comment" id="add-comment">
    <h5>Přidat komentář</h5>
    <div class="add-comment__citation" id="comment-citation" style="display: none;"></div>
    <textarea class="add-comment__input add-comment__input--text" rows="1" placeholder="Váš komentář" required></textarea>
    <div class="add-comment__wrapper">
      <input class="add-comment__input add-comment__input--name" type="text" placeholder="Jméno (nepovinné)">
      <input class="add-comment__input add-comment__input--email" type="email" placeholder="E-mail (nepovinné)">

      {# Captcha - kod #}
      <div class="add-comment__captcha-wrap">
        <img class="add-comment__captcha-img" src="{{ assets_url }}/captcha.png" id="captcha-img" width="160" height="40" alt="Kontrolní kód CAPTCHA">
        <input class="add-comment__input add-comment__input--code" type="number" name="captcha_id" min="10000" max="99999" placeholder="Kontrolní kód" required>
      </div>

      {# reCaptcha - checkbox #}
      {# <div class="g-recaptcha">
        <div style="width: 304px; height: 78px; display: flex; justify-content: center; align-items: center; background-color: #e9e9e9; border-radius: 3px; color: #aaa;">reCaptcha placeholder</div>
      </div> #}

      {# Otazka + odpoved #}
      {# <input class="add-comment__input" id="form-control-question" type="text" placeholder="2 + 3 =" required> #}

      <button class="add-comment__button add-comment__button--submit" type="submit">Odeslat</button>
      <button class="add-comment__button add-comment__button--close" type="button">Zavřít</button>
    </div>
  </div>

</section>